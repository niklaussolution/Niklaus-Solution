{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "ts-node": {
    "esm": true,
    "experimentalEsm": true,
    "moduleTypes": {
      "**/*": "esm"
    }
  },
  "include": [
    "src/**/*",
    "config/**/*",
    "models/**/*",
    "controllers/**/*",
    "routes/**/*",
    "services/**/*",
    "middleware/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
