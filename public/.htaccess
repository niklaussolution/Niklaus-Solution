# Niklaus Solutions - Apache Configuration for SEO
# Enable Gzip Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache Control Headers
<IfModule mod_headers.c>
  # Cache HTML for 1 hour
  <FilesMatch "\.html$">
    Header set Cache-Control "max-age=3600, public"
  </FilesMatch>

  # Cache CSS and JavaScript for 30 days
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "max-age=2592000, public"
  </FilesMatch>

  # Cache images for 1 year
  <FilesMatch "\.(jpg|jpeg|png|gif|svg|webp|ico)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>

  # Cache fonts for 1 year
  <FilesMatch "\.(ttf|otf|eot|woff|woff2)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>

  # Add security headers
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Remove ETags
<IfModule mod_headers.c>
  Header unset ETag
</IfModule>
FileETag None

# Enable mod_rewrite
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Remove www if present
  RewriteCond %{HTTP_HOST} ^www\. [NC]
  RewriteRule ^(.*)$ http://%{HTTP_HOST:1}$1 [R=301,L]
  
  # Force HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Remove trailing slashes (except for directories)
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.+)/$ /$1 [R=301,L]
  
  # Rewrite requests to /index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ /index.html [QSA,L]
</IfModule>

# Disable directory listing
Options -Indexes

# Disable access to sensitive files
<FilesMatch "(\.env|\.git|\.gitignore|package\.json|package-lock\.json|tsconfig\.json)">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    Order allow,deny
    Deny from all
  </IfModule>
</FilesMatch>
